<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jonny.gamehelper.Hub"
    tools:showIn="@layout/activity_hub">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    <ImageButton
        android:layout_width="@dimen/tile_menu_width"
        android:layout_height="@dimen/tile_menu_height"
        android:id="@+id/imgBtnGames"
        android:layout_marginTop="36dp"
        android:minHeight="150dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"
        android:minWidth="150dp"
        android:src="@drawable/die"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="@dimen/tile_menu_width"
        android:layout_height="@dimen/tile_menu_height"
        android:id="@+id/imgBtnInstructions"
        android:minHeight="150dp"
        android:background="@color/colorPrimary"
        android:minWidth="150dp"
        android:layout_above="@+id/imgBtnProfile"
        android:layout_toEndOf="@+id/imgBtnGames"
        android:scaleType="fitCenter"
        android:src="@drawable/penciltilemenuinstruct" />

    <ImageButton
        android:layout_width="@dimen/tile_menu_width"
        android:layout_height="@dimen/tile_menu_height"
        android:layout_below="@id/imgBtnGames"
        android:layout_marginTop="20dp"
        android:id="@+id/imgBtnProfile"
        android:minHeight="150dp"
        android:background="@color/colorPrimary"
        android:minWidth="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/boltstats"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="@dimen/tile_menu_width"
        android:layout_height="@dimen/tile_menu_height"
        android:id="@+id/imageButton4"
        android:minHeight="150dp"
        android:background="@color/colorPrimary"
        android:minWidth="150dp"
        android:layout_alignTop="@+id/imgBtnProfile"
        android:layout_alignStart="@+id/imgBtnInstructions"
        android:src="@drawable/dicetilemenuxxhdpi"
        android:scaleType="fitCenter" />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>